
@model PrimeiraAplicação.Areas.Seguranca.Models.UsuarioViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando dados do usuário";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel panel-primary">
        <div class="panel-heading">
            Visualizando o USUÁRIO @Html.DisplayFor(model => model.Nome)
        </div>
        <div class="panel-body">
            @Html.Partial("~/Areas/Seguranca/Views/Admin/_PartialDetailsContentPanel.cshtml", Model)
        </div>
        <div class="panel-footer panel-info">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Alterar", "Edit", new { id = Model.Id },
                new { @class = "btn btn-info" })
                @Html.ActionLink("Retornar para a listagem de USUÁRIOS", "Index", null,
                new { @class = "btn btn-info" })
            </div>
            <br /> <br />
        </div>
    </div>
}
@section ScriptPage {
    <script type="text/javascript">
$(document).ready(function () {
$('li').removeClass("active");
('#liUsuarios').addClass("active");
});
    </script>
}