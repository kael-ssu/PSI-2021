@model IEnumerable<Modelo.Cadastros.Produto>

<!DOCTYPE html>

<html lang="pt-br">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" charset="utf-8" />
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .col-centered {
            float: none;
            margin: 0 auto;
        }

        .carousel-item {
            height: 430px;
            overflow: hidden;
            width: 100%;
        }

    </style>
</head>
<body>
    <main class="bg-dark">
        <section class="container-fluid px-0">
            <header class="bg-dark py-3">
                <h1 class="text-center text-white">PC-Pieces</h1>
            </header>

            <nav class="bg-secondary">
                <ul class="nav nav-tabs nav-justified">
                    <li class="col nav-item">
                        <a class="nav-link text-white" href="#">Teclados</a>
                    </li>
                    <li class="col nav-item">
                        <a class="nav-link text-white" href="#">Mouses</a>
                    </li>
                    <li class="col nav-item">
                        <a class="nav-link text-white" href="#">Monitores</a>
                    </li>
                    <li class="col nav-item">
                        <a class="nav-link text-white" href="#">GPU</a>
                    </li>
                    <li class="col nav-item">
                        <a class="nav-link text-white" href="#">Processadores</a>
                    </li>
                    <li class="col nav-item">
                        <a class="nav-link text-white" href="#">Gabinetes</a>
                    </li>
                    <li class="col nav-item">
                        <a class="nav-link text-white" href="#">Outros</a>
                    </li>
                </ul>
            </nav>
        </section>

        <section class="container" style="margin-top: 30px;">
            <div class="row">
                <div class="col-sm-6 col-centered">

                    <div id="demo" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
                            <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
                            <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
                            <button type="button" data-bs-target="#demo" data-bs-slide-to="3"></button>
                            <button type="button" data-bs-target="#demo" data-bs-slide-to="4"></button>
                            <button type="button" data-bs-target="#demo" data-bs-slide-to="5"></button>
                            <button type="button" data-bs-target="#demo" data-bs-slide-to="6"></button>
                        </div>

                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <div class="bg-primary">
                                    <h3 class="text-center">LANÇAMENTOS</h3>
                                </div>                              
                            </div>

                            @foreach (var item in Model)
                            {
                                <div class="carousel-item">
                                    <img class="d-block w-50 mx-auto" style="width: 200px;" src="@Url.Action("GetLogotipo", "Home", new { id = item.ProdutoId })" />
                                    <div class="container w-50 bg-warning">
                                        <h4 class="text-white text-center" style="margin-top: 30px;">@Html.DisplayFor(modelItem => item.Nome)</h4>
                                        <p class="text-success text-center">R$ @Html.DisplayFor(modelItem => item.Preço),00</p>
                                    </div>
                                        
                                </div>
                            }
                        </div>

                        <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                        </button>

                    </div>
                </div>
            </div>
        </section>

        <section class="container" style="margin-top: 200px;">
            <h2 class="text-white">DESCONTOS</h2>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="card col align-items-center" style="margin: 10px 20px 10px 20px;">
                        <img class="img-thumbnail" src="@Url.Action("GetLogotipo", "Home", new { id = item.ProdutoId })" />
                        <div class="card-body">
                            <h4 class="card-title">@Html.DisplayFor(modelItem => item.Nome)</h4>
                            <p class="card-text">R$ @Html.DisplayFor(modelItem => item.Preço),00</p>
                            <a href="#" class="btn btn-primary">Comprar</a>
                        </div>
                    </div>
                }
            </div>
            
        </section>
    </main>
</body>
</html>
